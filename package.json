{
  "name": "maquiavelog",
  "version": "0.0.1",
  "description": "An easy to use log for any Node JS project.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "npm run test-unit",
    "coverage": "nyc --all --reporter=lcov --reporter=text --check-coverage --lines 100 --functions 100 --branches 100 --per-file npm run test-unit",
    "test-unit": "mocha 'test/unit/**/*.spec.js'",
    "test-and-coverage": "npm run test && npm run coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rsmngdlmx/maquiavelog.git"
  },
  "keywords": [
    "maquiavelog",
    "nodejs",
    "logger"
  ],
  "author": "Ricardo Mendoza <ricardo.mendoza@ricardomendoza.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rsmngdlmx/maquiavelog/issues"
  },
  "homepage": "https://github.com/rsmngdlmx/maquiavelog#readme",
  "devDependencies": {
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0"
  }
}
